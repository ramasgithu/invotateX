}
}

// Function to close path details modal
function closePathDetails(pathId) {
const modal = document.getElementById(pathId + '-details');
if (modal) {
modal.classList.remove('active');
document.body.style.overflow = 'auto';
}
}

// Close modal when clicking outside
document.addEventListener('click', function(event) {
const overlays = document.querySelectorAll('.path-details-overlay.active');
overlays.forEach(overlay => {
const modal = overlay.querySelector('.path-details-modal');
if (event.target === overlay && !modal.contains(event.target)) {
overlay.classList.remove('active');
document.body.style.overflow = 'auto';
}
});
});
